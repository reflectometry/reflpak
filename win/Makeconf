# Things from tclConfig.sh
TCL_INCLUDE_SPEC=-Ic:/Tcl/include
TCL_LIB_DIR=-Lc:/Source/reflpak/win
TCL_STUB_LIB_SPEC=-ltclstub84
TK_STUB_LIB_SPEC=-ltkstub84
TCL_SHLIB_LD=gcc -pipe -shared
